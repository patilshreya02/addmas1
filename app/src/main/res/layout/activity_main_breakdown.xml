<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/tv"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <ImageView
        android:id="@+id/imageView"
        android:layout_width="396dp"
        android:layout_height="120dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="3dp"
        android:layout_marginTop="75dp"
        app:srcCompat="@drawable/logo" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="69dp"
        android:layout_below="@id/imageView"
        android:layout_marginTop="-197dp"
        android:background="@color/black"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="10dp"
            android:layout_marginBottom="10dp"
            app:srcCompat="@drawable/groupmain" />
    </LinearLayout>


    <TextView
        android:id="@+id/ed"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="300dp"
        android:gravity="center"
        android:text="ENTER THE DETAILS"
        android:textColor="@color/black"
        android:textSize="40sp" />

    <EditText
        android:id="@+id/userNameEditText"
        android:layout_width="508dp"
        android:layout_height="125dp"
        android:layout_marginTop="400dp"
        android:layout_marginEnd="800dp"
        android:gravity="center"
        android:textColor="@color/black"
        android:textSize="40sp"
        android:hint="Enter the details"
         />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="76dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="0dp"
        android:layout_marginBottom="0dp"
        android:background="@android:color/black"
        android:gravity="right"
        android:orientation="horizontal">

        <Button
            android:id="@+id/back"
            android:layout_width="150dp"
            android:layout_height="75dp"
            android:background="@android:color/transparent"
            android:text="BACK"
            android:textColor="@color/white"
            android:textSize="20dp" />


        <Button
            android:id="@+id/button4"
            android:layout_width="150dp"
            android:layout_height="75dp"
            android:background="@android:color/transparent"
            android:text="HELP"
            android:textColor="@color/white"
            android:textSize="20dp"
            />

        <Button
            android:id="@+id/button6"
            android:layout_width="200dp"
            android:layout_height="79dp"
            android:background="@android:color/transparent"
            android:text="CONTACT US"
            android:textColor="@color/white"
            android:textSize="20dp" />

        <Button
            android:id="@+id/button7"
            android:layout_width="200dp"
            android:layout_height="75dp"
            android:background="@android:color/transparent"
            android:text="LOGOUT"
            android:textColor="@color/blue"
            android:textSize="20dp"
            />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/li"
        android:layout_width="1244dp"
        android:layout_height="135dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="0dp"
        android:layout_marginTop="66dp"
        android:layout_marginBottom="208dp"
        android:gravity="center"
        android:orientation="vertical" />

    <Button
        android:id="@+id/next"
        android:layout_width="271dp"
        android:layout_height="97dp"
        android:layout_below="@id/li"
        android:layout_alignParentStart="true"
        android:layout_marginStart="935dp"
        android:layout_marginTop="60dp"
        android:background="#0500FF"
        android:text="NEXT"
        android:textColor="@color/white"
        android:textSize="25sp"/>


</RelativeLayout>
