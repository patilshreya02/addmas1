<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/op"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity2">


    <ImageView
        android:id="@+id/imageView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="40dp"
        android:layout_marginTop="38dp"
        app:srcCompat="@drawable/addmas" />


    <TextView
        android:id="@+id/textView"
        android:layout_width="299dp"
        android:layout_height="73dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="39dp"
        android:layout_marginEnd="45dp"
        android:text="Company Name : Vedika Enterprises
                                     Machine No. : C1001 "
        android:textColor="#000000"
        android:textSize="18sp" />

    <LinearLayout
        android:layout_width="627dp"
        android:layout_height="554dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="293dp"
        android:layout_marginTop="195dp"
        android:orientation="vertical"
        android:background="@drawable/squ"
        android:gravity="center">


        <TextView
            android:id="@+id/textView4"
            android:layout_width="350dp"
            android:layout_height="58dp"
            android:paddingTop="20dp"
            android:text="OPERATOR ID"
            android:textColor="@color/white"
            android:textSize="25sp"
            android:layout_marginBottom="20dp"/>

        <EditText
            android:id="@+id/editTextText4"
            android:layout_width="350dp"
            android:layout_height="58dp"
            android:layout_marginBottom="20dp"
            android:background="@color/white"
            android:hint="Enter your operator id here"
            android:inputType="text" />

        <TextView
            android:id="@+id/textView5"
            android:layout_width="350dp"
            android:layout_height="58dp"
            android:paddingTop="20dp"
            android:text="PASSWORD"
            android:textColor="@color/white"
            android:textSize="25sp"
            android:layout_marginBottom="20dp"/>

        <EditText
            android:id="@+id/editTextText5"
            android:layout_width="350dp"
            android:layout_height="58dp"
            android:layout_marginBottom="20dp"
            android:background="@color/white"
            android:ems="10"
            android:hint="Enter your password here"
            android:inputType="text" />

        <Button
            android:id="@+id/back"
            android:layout_width="150dp"
            android:layout_height="58dp"
            android:layout_marginBottom="30dp"
            android:background="#0500FF"
            android:gravity="center"
            android:text="LOGIN"
            android:textColor="@color/white"
            android:textSize="20sp" />
    </LinearLayout>


    <LinearLayout
        android:layout_width="1297dp"
        android:layout_height="75dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_centerVertical="true"
        android:layout_marginStart="0dp"
        android:layout_marginEnd="0dp"
        android:layout_marginBottom="-4dp"
        android:background="@android:color/black"
        android:orientation="horizontal">

        <Button
            android:id="@+id/button4"
            android:layout_width="150dp"
            android:layout_height="75dp"
            android:background="@android:color/transparent"
            android:layout_marginLeft="0dp"
            android:text="BACK"
            android:textColor="@color/white"
            android:textSize="20dp" />

        <Button
            android:id="@+id/button6"
            android:layout_width="150dp"
            android:layout_height="75dp"
            android:background="@android:color/transparent"
            android:text="HELP"
            android:layout_marginLeft="700dp"
            android:textColor="@color/white"
            android:textSize="20dp" />

        <Button
            android:id="@+id/button7"
            android:layout_width="200dp"
            android:layout_height="75dp"
            android:background="@android:color/transparent"
            android:gravity="right"
            android:text="CONTACT US"
            android:textColor="@color/white"
            android:textSize="20dp"
            android:layout_marginStart="40dp"/>

    </LinearLayout>

</RelativeLayout>